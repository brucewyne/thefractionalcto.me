{{>head}}
{{>header}}

<!-- Main -->
<main>
  <!-- Hero Start -->
  <section
    class="pt-44 pb-120"
    style="
          background: url('/images/bg/hero-1-bg.jpg') no-repeat center
            center/cover;
        "
  >
    <div class="mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8">
